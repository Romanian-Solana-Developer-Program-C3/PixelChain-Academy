{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
    "env.ts"
  ]
}